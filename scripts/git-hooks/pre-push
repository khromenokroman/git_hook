#!/bin/bash

echo "Запуск тестов перед отправкой изменений..."

# Проверяем, существует ли директория сборки
BUILD_DIR="build"
if [ ! -d "$BUILD_DIR" ]; then
    echo "Директория сборки $BUILD_DIR не найдена. Создаю новую..."
    mkdir -p "$BUILD_DIR"
    cd "$BUILD_DIR"
    cmake .. || { echo "Ошибка при выполнении CMake"; exit 1; }
else
    cd "$BUILD_DIR"
    # Убедимся, что проект перестроен с последними изменениями
    cmake --build . || { echo "Ошибка при сборке проекта"; exit 1; }
fi

# Запускаем тесты
echo "Запуск тестов..."
./tests/tests

# Проверяем результат выполнения тестов
if [ $? -ne 0 ]; then
    echo "Тесты не прошли! Push отменен."
    exit 1
fi

echo "Все тесты пройдены успешно. Продолжаем push..."
exit 0